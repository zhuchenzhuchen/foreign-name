VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here
VITE_SITE_URL=http://localhost:5173
VITE_SITE_NAME=Chinese Name Finder

# SMS Configuration
# 是否使用真实短信服务 (true/false)
VITE_USE_REAL_SMS=false

# 短信服务提供商 (tencent/aliyun)
VITE_SMS_PROVIDER=tencent

# 腾讯云短信配置
VITE_TENCENT_SECRET_ID=your_tencent_secret_id
VITE_TENCENT_SECRET_KEY=your_tencent_secret_key
VITE_TENCENT_REGION=ap-beijing
VITE_TENCENT_TEMPLATE_ID=your_template_id
VITE_TENCENT_SIGN_NAME=your_sign_name

# 阿里云短信配置
VITE_ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id
VITE_ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret
VITE_ALIYUN_TEMPLATE_CODE=your_template_code
VITE_ALIYUN_SIGN_NAME=your_sign_name

# Email Configuration
# 是否使用真实邮箱服务 (true/false)
VITE_USE_REAL_EMAIL=false

# 邮箱服务提供商 (nodemailer/sendgrid/mailgun)
VITE_EMAIL_PROVIDER=nodemailer

# SendGrid 邮箱配置
VITE_SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun 邮箱配置
VITE_MAILGUN_API_KEY=your_mailgun_api_key
VITE_MAILGUN_DOMAIN=your_mailgun_domain

# 发送方邮箱配置
VITE_FROM_EMAIL=noreply@yourdomain.com